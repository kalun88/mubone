---
import Base from "@/layouts/Base.astro";
import { getAllPosts } from "@/lib/notion";

// Fetch posts from Notion
let posts = await getAllPosts();

// Filter by ShowOnHomepage, then sort: pinned first (by pin order), then by date
posts = posts
  .filter((post) => post.ShowOnHomepage)
  .sort((a, b) => {
    const aPinned = a.PinOrder !== null && a.PinOrder !== undefined;
    const bPinned = b.PinOrder !== null && b.PinOrder !== undefined;
    // Pinned posts come first
    if (aPinned && !bPinned) return -1;
    if (!aPinned && bPinned) return 1;
    // Both pinned: sort by pin order ascending (1 = top)
    if (aPinned && bPinned) return (a.PinOrder as number) - (b.PinOrder as number);
    // Both unpinned: sort by date descending
    return new Date(b.Date).getTime() - new Date(a.Date).getTime();
  });

// Fallback to placeholder data if Notion is not configured
const placeholderPosts = [
  {
    Slug: "garcia-performance",
    Title: "garcia — solo movement and sound performance",
    Date: "2024-11-15",
    Type: "project",
    Excerpt: "planting trombone sounds in pre-determined zones such as ground, horizon, sky. each zone processes the recorded sound in different ways.",
    FeaturedImage: null,
  },
  {
    Slug: "conversations-with-space-and-architecture",
    Title: "conversations with space and architecture",
    Date: "2024-09-20",
    Type: "project",
    Excerpt: "the environment becomes a source of inspiration both acoustically and visually. the frame of a building can be used as a graphic score for the mubone to trace.",
    FeaturedImage: null,
  },
  {
    Slug: "nime-2022-paper",
    Title: "early prototypes and artistic practice with the mubone — nime 2022",
    Date: "2022-06-28",
    Type: "blog",
    Excerpt: "peer-reviewed paper presented at new interfaces for musical expression. documenting the design evolution and creative applications of the mubone.",
  },
  {
    Slug: "ircam-manifeste-2022",
    Title: "ircam manifeste — paris residency",
    Date: "2022-06-10",
    Type: "blog",
    Excerpt: "performing and presenting the mubone at ircam forum and manifeste festival in paris.",
  },
  {
    Slug: "moco-2019-paper",
    Title: "mubone: an augmented trombone — moco 2019",
    Date: "2019-10-15",
    Type: "blog",
    Excerpt: "paper and demo presented at the international conference on movement and computing. introducing the mubone as a movement-based granular synthesizer.",
  },
];

if (posts.length === 0) {
  posts = placeholderPosts;
}

function formatDate(dateStr: string): string {
  const d = new Date(dateStr + "T12:00:00");
  return d.toLocaleDateString("en-US", { month: "short", day: "numeric", year: "numeric" }).toLowerCase();
}
---

<Base>
  <div class="homepage">
    <div class="tagline">
      <p>making space to sound</p>
    </div>

    <hr />

    <div class="posts-list">
      {posts.map((post) => (
        <article class={`post-item ${post.Type}`}>
          {post.Type === "project" ? (
            <a href={`/posts/${post.Slug}/`} class="project-card">
              <div class="project-placeholder-image">
                <span class="project-type-label">project</span>
              </div>
              <div class="project-info">
                <h2 class="post-title">{post.Title}</h2>
                <time class="post-date">{formatDate(post.Date)}</time>
                {post.Excerpt && <p class="post-excerpt">{post.Excerpt}</p>}
              </div>
            </a>
          ) : (
            <a href={`/posts/${post.Slug}/`} class="blog-entry">
              <div class="blog-meta">
                <time class="post-date">{formatDate(post.Date)}</time>
              </div>
              <div class="blog-content">
                <h2 class="post-title">{post.Title}</h2>
                {post.Excerpt && <p class="post-excerpt">{post.Excerpt}</p>}
              </div>
            </a>
          )}
          <hr />
        </article>
      ))}
    </div>
  </div>
</Base>

<style>
  .homepage {
    max-width: 720px;
  }

  .tagline {
    margin: 2rem 0 0;
  }
  .tagline p {
    color: var(--color-text-muted);
    font-size: 14px;
    line-height: 1.6;
    margin: 0;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
  }

  .post-item {
    margin: 0;
  }
  .post-item hr {
    margin: 1.5rem 0;
  }

  /* Project cards — visual */
  .project-card {
    display: block;
    color: var(--color-text);
    text-decoration: none;
  }
  .project-card:hover {
    color: var(--color-text);
  }
  .project-card:hover .post-title {
    color: var(--color-accent);
  }

  .project-placeholder-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    background-color: var(--color-bg-surface);
    margin-bottom: 1rem;
    display: flex;
    align-items: flex-end;
    padding: 0.75rem;
    position: relative;
  }

  .project-type-label {
    font-size: 10px;
    color: var(--color-text-dim);
    letter-spacing: 0.08em;
  }

  .project-info {
    /* padding below image */
  }

  /* Blog entries — text-forward */
  .blog-entry {
    display: flex;
    gap: 1.5rem;
    color: var(--color-text);
    text-decoration: none;
    align-items: flex-start;
  }
  .blog-entry:hover {
    color: var(--color-text);
  }
  .blog-entry:hover .post-title {
    color: var(--color-accent);
  }

  .blog-meta {
    flex-shrink: 0;
    width: 100px;
    padding-top: 0.1rem;
  }

  .blog-content {
    flex: 1;
  }

  /* Shared */
  .post-title {
    font-size: 13px;
    font-weight: 400;
    margin: 0 0 0.35rem;
    line-height: 1.5;
    transition: color 0.15s ease;
  }

  .post-date {
    font-size: 11px;
    color: var(--color-text-dim);
    letter-spacing: 0.02em;
  }

  .post-excerpt {
    font-size: 12px;
    color: var(--color-text-muted);
    margin: 0.35rem 0 0;
    line-height: 1.6;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .blog-entry {
      flex-direction: column;
      gap: 0.25rem;
    }
    .blog-meta {
      width: auto;
    }
  }
</style>
